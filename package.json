{
  "name": "svelte_socket_starter",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "jest",
    "setup": "npm install && cd src/client && npm install && cd ../..",
    "dev-client": "cd src/client && npx rollup -c -w",
    "dev-server": "concurrently npm:dev-server:*",
    "dev-server:compile": "tsc -w",
    "dev-server:run": "nodemon"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/",
      "dist/",
      "coverage/"
    ],
    "watch": [
      "src/server/"
    ],
    "exec": "node --loader ts-node/esm src/server/main.ts --emit",
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
  },
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^4.1.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@tsconfig/svelte": "^2.0.1",
    "@types/express": "^4.17.12",
    "@types/node": "^15.12.2",
    "@types/socket.io-client": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "concurrently": "^6.2.0",
    "jest": "^27.0.4",
    "node-sass": "^6.0.0",
    "nodemon": "^2.0.7",
    "sirv-cli": "^1.0.12",
    "socket.io-client": "^4.1.2",
    "svelte-check": "^2.1.0",
    "svelte-preprocess": "^4.7.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.3.2"
  }
}
